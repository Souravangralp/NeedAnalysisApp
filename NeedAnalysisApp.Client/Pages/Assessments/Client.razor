                            <MudText>Q3. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText>Q4. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                    </MudGrid>

                    <MudGrid Class="mt-5">
                        <MudItem xs="6">
                            <MudText>Q5. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText>Q6. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Success"></MudSlider>
                        </MudItem>
                    </MudGrid>

                    <MudText Align="Align.Center" Class="mt-4" Typo="Typo.h6">Learning & Development and Employee Engagement</MudText>

                    <MudGrid Class="mt-5">
                        <MudItem xs="6">
                            <MudText>Q1. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText>Q2. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                    </MudGrid>

                    <MudGrid Class="mt-5">
                        <MudItem xs="6">
                            <MudText>Q3. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText>Q4. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider>
                        </MudItem>
                    </MudGrid>

                    <MudGrid Class="mt-5">
                        <MudItem xs="6">
                            <MudText>Q5. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            @* <MudSlider Step="50" Value="100" Color="Color.Warning"></MudSlider> *@
                        </MudItem>
                        <MudItem xs="6">
                            <MudText>Q6. How clearly does your leadership define innovation?</MudText>
                            <MudDivider />
                            <MudText Typo="Typo.subtitle2">
                                Measures the clarity of leadership’s innovation vision
                            </MudText>
                            @* <MudSlider Step="25" Value="100" Color="Color.Success"></MudSlider> *@
                        </MudItem>
                    </MudGrid>

                    <MudItem Class="mt-2 d-flex justify-content-end">
                        <MudButton OnClick="(e)=> OnNextClick(WhatWeDoTab)" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.NavigateBefore" Color="Color.Primary">Previous</MudButton>
                        <MudButton Class="ms-2" OnClick="(e)=> OnSubmitClick()" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.NavigateNext" Color="Color.Primary">Analysis</MudButton>
                    </MudItem>

                </MudTabPanel>

            </MudTabs>
        </MudPaper>
    </Authorized>
