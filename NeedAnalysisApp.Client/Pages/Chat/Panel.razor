@page "/chat/{UserId}"

<MudContainer Style="height: 500px; overflow-y: auto;">

    @if (IsDefault)
    {
        <MudItem Class="d-flex justify-center align-center">
            <MudText Align="Align.Center">Please choose a person to chat with</MudText>
        </MudItem>
    }
    else
    {
        <MudGrid>

            @*--------------chat header--------------*@
            <MudItem xs="12">
                <MudList T="string">
                    <MudListItem Text="@(ChatPerson.FirstName)">
                        <AvatarContent>
                            <MudBadge Color="@(ChatPerson.IsOnline ? Color.Success : Color.Error)" Class="mx-6 my-4">
                                <MudAvatar>
                                    <MudImage Src="@ChatPerson.ProfilePictureUrl" />
                                </MudAvatar>
                            </MudBadge>
                        </AvatarContent>
                    </MudListItem>
                </MudList>
            </MudItem>

            @*--------------chat container--------------*@
            <MudItem Class="mt-1" xs="12">

                <MudContainer id="chatContainer" Style="height: 280px; overflow-y: auto;">

                    @foreach (var chat in Chats)
                    {
                        @if (chat.Message != null)
                        {
                            @*-------------Sender messages------------*@
                            @if (chat.Message.SenderId == CurrentPerson.Id)
                            {
                                <MudItem xs="12">
                                    <MudItem Class="d-flex justify-content-end">

                                        @if (chat.Message.File != null && !string.IsNullOrWhiteSpace(chat.Message.File.FileUrl))
                                        {
                                            <MudImage Height="150" Width="200" Src="@(chat.Message.File.FileUrl)"></MudImage>
                                        }
                                        else
                                        {
                                            <MudChip T="string" Style="min-height: 50px; display: flex; align-items: center;" Color="Color.Default">
                                                <AvatarContent>
                                                    <MudAvatar>
                                                        <MudImage Src="@(CurrentPerson.ProfilePictureUrl)"></MudImage>
                                                    </MudAvatar>
                                                </AvatarContent>
                                                <ChildContent>
                                                    @chat.Message.Content
                                                </ChildContent>
                                            </MudChip>
                                        }
                                    </MudItem>

                                    <MudItem Class="d-flex justify-content-end mb-2" Style="min-height: 50px; display: flex; align-items: center; margin-top: -16px; padding: 7px;">
                                        <MudText Typo="Typo.subtitle2">@chat.Message.Timestamp.Value.ToShortTimeString()</MudText>
                                    </MudItem>
                                </MudItem>
                            }

                            @*-------------Receiver messages------------*@
                            else
                            {
                                <MudItem xs="12">
                                    <MudItem Class="d-flex justify-content-start">

                                        @if (chat.Message.File != null && !string.IsNullOrWhiteSpace(chat.Message.File.FileUrl))
                                        {
                                            <MudImage Height="150" Width="200" Src="@(chat.Message.File.FileUrl)"></MudImage>
                                        }
                                        else
                                        {
                                            <MudChip T="string" Style="min-height: 50px; display: flex; align-items: center;" Color="Color.Success">
                                                <AvatarContent>
                                                    <MudAvatar>
                                                        <MudImage Src="@(ChatPerson.ProfilePictureUrl)"></MudImage>
                                                    </MudAvatar>
                                                </AvatarContent>
                                                <ChildContent>
                                                    @chat.Message.Content
                                                </ChildContent>
                                            </MudChip>
                                        }
                                    </MudItem>

                                    <MudItem Class="d-flex justify-content-start mb-2" Style="min-height: 50px; display: flex; align-items: center; margin-top: -16px; padding: 7px;">
                                        <MudText Typo="Typo.subtitle2">@chat.Message.Timestamp.Value.ToShortTimeString()</MudText>
                                    </MudItem>
                                </MudItem>
                            }
                        }
                    }


                </MudContainer>

                @*--------------selected images--------------*@
                @if (_files.Any())
                {
                    <MudList T="string" Class="mt-2" xs="12">
                        @foreach (var file in _files)
                        {
                            <MudListItem Icon="@Icons.Material.Filled.AttachFile" @key="@file">
                                @file.Name <MudIconButton Color="Color.Error" Icon="@Icons.Material.Filled.Cancel" OnClick="RemoveImage"></MudIconButton>
                            </MudListItem>
                        }
                    </MudList>
                }

            </MudItem>

            @*--------------action buttons--------------*@
            <MudItem Class="mt-2" xs="12">
                <MudContainer>

                    <MudGrid>
                        <MudFileUpload Class="ms-1 xs=12 sm-3" Style="margin: 5px;" T="IBrowserFile" FilesChanged="UploadFiles" Accept=".png, .jpg .pdf">
                            <ActivatorContent>
                                <MudFab Color="Color.Success"
                                        StartIcon="@Icons.Material.Filled.AttachFile" />
                            </ActivatorContent>
                        </MudFileUpload>
                        <MudTextField Class="ms-1 xs=12 sm-5" @bind-Value="MessageText" Label="Type a message" Variant="Variant.Outlined" />
                        <MudButton Class="ms-1 xs=12 sm-4" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary" OnClick="SendMessage">Send</MudButton>
                    </MudGrid>

                </MudContainer>
            </MudItem>

        </MudGrid>
    }

</MudContainer>